#include<bits/stdc++.h>
using namespace std;

int main()
{
    int n ;
    cin >> n;

    int a = 0;
    string s;

    for(int i = 0 ; i < n; i++)
    {
        cin >> s ;

        sort(s.begin(),s.end());
        if(s=="++X")
        {
            a++;
        }
        else if (s=="--X")
        {
            a--;
        }
    }
    cout << a << endl;
    return 0;
}
